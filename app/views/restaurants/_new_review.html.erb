<%= form_for Review.new, url: add_review_restaurant_path(@restaurant), remote: true do |f| %>
  <div class="field">
    <%= f.label :your_review %><br />
    <%= f.text_area :content, class: "materialize-textarea" %>
  </div>

  <div class="actions">
    <%= f.submit "Add Review", class: 'waves-effect waves-light btn' %>
  </div>
<% end %>