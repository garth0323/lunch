<div class="container">
  <h2>Pick Your Restaurant</h2>
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#test1">Low Risk</a></li>
        <li class="tab col s3"><a class="active" href="#test2">Some Risk</a></li>
        <li class="tab col s3"><a href="#test3">Experiences Matter</a></li>
      </ul>
    </div>
    <div id="test1" class="col s12">
      <div class="collection">
        <% @all_upvoted.each do |restaurant| %>
          <%= link_to restaurant.name, choose_restaurant_group_path(@group, restaurant: restaurant), method: :post, remote: true, class: "collection-item" %>
        <% end %>
      </div>
    </div>
    <div id="test2" class="col s12">
      <div class="collection">
        <% @one_upvoted.each do |restaurant| %>
          <%= link_to restaurant.name, choose_restaurant_group_path(@group, restaurant: restaurant), method: :post, remote: true, class: "collection-item" %>
        <% end %>
      </div>
    </div>
    <div id="test3" class="col s12">
      <div class="collection">
        <% @no_veto.each do |restaurant| %>
          <%= link_to restaurant.name, choose_restaurant_group_path(@group, restaurant: restaurant), method: :post, remote: true, class: "collection-item" %>
        <% end %>
      </div>
    </div>
  </div>
</div>